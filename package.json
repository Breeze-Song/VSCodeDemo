{
  "name": "plugindemo",
  "displayName": "PluginDemo",
  "description": "task",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "HTMLDEMO",
          "title": "html界面",
          "icon": "src/media/views/icon.svg"
        }


      ],
      "panel": [        
        {
          "id": "FILEDIR",
          "title": "目标目录树",
          "icon": "src/media/views/drink.svg"
        }

      ]

    },

    "views": {
      "HTMLDEMO": [
        {
          "type": "webview",
          "id": "htmldemo",
          "name": "html界面"
        }
      ],
      "FILEDIR": [
        {
          "id": "fileexplorer",
          "name": "treelist",
          "when": "fileexplorer.enabled"
        }
      ]
    }


  },
  "files": [
    "src/media/**/*.html",
    "src/media/**/*.css",
    "src/media/**/*.js"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
